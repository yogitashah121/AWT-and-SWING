    private void jTextField1ActionPerformed(java.awt.event.ActionEvent evt) {                                            
    
    }                                           
    public void convert(Integer temp,Double t){
    //System.out.println(temp);
   // System.out.println(t);
    switch(s)
    {
       case 0: String result=Integer.toBinaryString(temp);
               jTextField2.setText(result);
               break;
        case 1:String r=Integer.toOctalString(temp);
               jTextField2.setText(r);
               break;
        case 2:String re=Integer.toHexString(temp);
               jTextField2.setText(re);
               break;
    }    

    }
    private void jComboBox1ActionPerformed(java.awt.event.ActionEvent evt) {                                           
      int i=jComboBox1.getSelectedIndex();
      switch(i){
          case 0:jLabel3.setText("Decimal");jLabel4.setText("Binary");s=0;valid();break;
          case 1:jLabel3.setText("Decimal");jLabel4.setText("Octal");s=1;valid();break;
           case 2:jLabel3.setText("Decimal");jLabel4.setText("Hexa");s=2;valid();break;
      }
    }                                          
   public void valid(){
   Double b=Double.valueOf(jTextField1.getText());
   int t = (int) Math.round(b);
   convert(t,b);
   }
    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
     valid();
        
    }                                        

