    public void check(){
    
      if(jTextField2.getText().equals("")){
        jTextField1.setText("");
    jTextField2.setText("0");
    }
    }
    public void convert(){   
        //check();
        switch(status){
            case 0:
                   Double t=Double.parseDouble(jTextField2.getText());
                   Double f=1.8*t+32;
                   jTextField1.setText(f.toString());
                   break;
          case 1:  
                   Double t1=Double.parseDouble(jTextField2.getText());
                   Double f1=t1+273.15;
                   jTextField1.setText(f1.toString());
                   break; 
          case 2:  
                   Double t2=Double.parseDouble(jTextField2.getText());
                   Double f2=(t2-32)*5/9;
                   jTextField1.setText(f2.toString());
                   break; 
         case 3:  
                   Double t3=Double.parseDouble(jTextField2.getText());
                   Double f3=(t3-32)*5/9+273.15;
                   jTextField1.setText(f3.toString());
                   break;
        case 4:   
                   Double t4=Double.parseDouble(jTextField2.getText());
                   Double f4=t4-273.15;
                   jTextField1.setText(f4.toString());
                   break;
        case 5:    
                   Double t5=Double.parseDouble(jTextField2.getText());
                   Double f5=t5-457.87;
                   jTextField1.setText(f5.toString());
                   break;
        }
    
    }
    private void btn(java.awt.event.ActionEvent evt) {                     
          check();
          convert();
          
    }                    
     public void ctof(){
         jLabel2.setText("°C");
         jLabel3.setText("°F");
       convert(); 
     }
       public void ctok(){
            jLabel2.setText("°C");
         jLabel3.setText("°K");
         convert();
       }
       public void ftoc(){
            jLabel2.setText("°F");
         jLabel3.setText("°C");
         convert();
       }
       public void ftok(){
            jLabel2.setText("°F");
         jLabel3.setText("°K");
         convert();
       }
        public void ktoc(){
            jLabel2.setText("°K");
         jLabel3.setText("°C");
         convert();
       }
        public void ktof(){
            jLabel2.setText("°K");
         jLabel3.setText("°F");
         convert();
       }
    private void jComboBox1ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        check();
         int s;
        s =jComboBox1.getSelectedIndex();
       switch(s){
           case 0:status=0;ctof();break;
            case 1:status=1;ctok();break; 
            case 2:status=2;ftoc();break; 
            case 3:status=3;ftok();break; 
            case 4:status=4;ktoc();break; 
            case 5:status=5;ktof();break; 
          }     
    }                                          

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        jTextField1.setText("");
        jTextField2.setText("");
    }                                        


  
